{
	"compilerOptions": {
		"composite": true,
		"sourceMap": true,
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"], // Add Node.js types if not included       "moduleResolution": "node",
		"outDir": "./dist",
		"moduleResolution": "node",
		"rootDir": "./src",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": false,
		"declaration": true,
		"emitDeclarationOnly": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"allowJs": true,
		"checkJs": false,
		"noEmitOnError": false,
		"moduleDetection": "force"
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
